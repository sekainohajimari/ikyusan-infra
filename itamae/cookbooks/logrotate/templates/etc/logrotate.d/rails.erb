<%= node[:logrotate][:app_log_dir] %>/*log {
  weekly
  rotate <%= node[:logrotate][:rotate] %>
  missingok
  compress
  notifempty
  copytruncate
  dateext
  create 0644 <%= node[:nginx][:document_root_user] %> <%= node[:nginx][:document_root_user] %>
  <% if $infra_env == 'development' %>
    # Note: CentOS7とかだとpermisssionの制約が強くなって以下が必要
    su root root
  <% end %>

  lastaction
    pid=<%= node[:nginx][:unicorn_sock] %>
    test -s $pid && kill -USR1 "$(cat $pid)"
  endscript
}
